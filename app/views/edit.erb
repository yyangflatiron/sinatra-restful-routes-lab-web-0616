<form method='post' action='/recipes/<%=@recipe.id%>'>
  <%=@recipe.ingredients%><p>
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type='text' name='name'  value="<%=@recipe.name%>"><p>
  Ingredients: <input type='text' name='ingredients'  value="<%=@recipe.ingredients%>"><p>
